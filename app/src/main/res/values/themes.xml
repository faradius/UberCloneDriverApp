<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UberCloneDriverApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

<!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!-- Customize your theme here. -->
    </style>
    
    <style name="EditTextGray" parent="TextAppearance.AppCompat">
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlActivated">@color/gray_dark</item>
        <item name="colorControlHighlight">@color/gray_dark</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="colorAccent">@color/gray_dark</item>
        <item name="android:textColorPrimary">@color/gray_dark</item>
    </style>
</resources>